<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >

       <TextView
            android:id="@+id/back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:textSize="30dp"
            />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Name: "
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:drawableRight="@drawable/ic_baseline_person_24"
        />
    <EditText
        android:id="@+id/patientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:hint="Patient Name"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:hint="Age"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:drawableRight="@drawable/ic_baseline_perm_contact_calendar_24"
        />
    <EditText
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:hint="Address"
        android:paddingLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Slot: "
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_baseline_access_time_24"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:hint="Time slt"
        android:paddingLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Charges: "
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_baseline_attach_money_24"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/Charges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:hint="Charges"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disease Description: "
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_baseline_add_comment_24"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:hint="Description"
        android:paddingLeft="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="Reject"
            android:textAllCaps="false"
            android:textSize="20sp"/>


    </LinearLayout>

</LinearLayout>